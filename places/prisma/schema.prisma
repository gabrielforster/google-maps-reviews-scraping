generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Place {
  id          String   @id @default(uuid())
  name        String
  slug        String   @unique
  description String?
  url         String
  createdAt   DateTime @default(now()) @map("created_at")

  reviews Review[]

  @@map("places")
}

model Review {
  id           String   @id @default(uuid())
  rating       Int
  comment      String?
  link         String
  date         DateTime
  reviewerName String   @map("reviewer_name")

  placeId String
  place   Place  @relation(fields: [placeId], references: [id])

  @@map("reviews")
}
